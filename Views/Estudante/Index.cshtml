@model List<MvcRazorViews.ViewModels.EstudanteViewModel>

@{
    ViewData["Title"] = "Estudantes";
}

<h1>Estudantes</h1>

@if(Model.Count == 0)
{
    <p>Não há estudante cadastrado</p>
    <a href="#"> Cadastre agora um estudante</a>
}
else 
{
<p>@Model.Count estudantes cadastrados  </p>

@foreach (var estudante in Model)
{
    <a href="Estudante/Show/@estudante.Id"><h4>@estudante.Nome</h4></a>
    <p>@estudante.Endereco</p>
    @if(estudante.Ativo)
    {
    <a href="#">Iniciar Conversa</a>
    <br>
    }
    <br>
}
}